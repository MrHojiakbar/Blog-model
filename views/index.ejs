<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: sans-serif;
        }
        body{
            background-color: black;
            display: flex;
            padding-top: 100px;
            justify-content: center;
        }
        main{
            width: 500px;
            height: 800px;
            background-color: rgb(49, 45, 94);
            position: relative;
        }
        .blog_info{
            padding: 20px;
        }
        .blog_info h3{
            text-align: center;
            color: white;
        }
        .send{
            position: absolute;
            bottom: 0;
        }
        .send input{
            width: 436px;
            height: 40px;
        }
        .send button{
            height: 40px;
        }
        .messages{
            position: absolute;
            bottom: 100px;
            right: 10px;
        }
        ul{
            list-style-type: none;
            gap: 30px;
        }
        li{
            background-color: white;
            padding: 15px;
            width: 250px;
            max-width: 250px;
            border-radius: 5px;
            margin-bottom: 10px;
            display: flex;
        }
        .libox{
            display: flex;
            gap: 10px;
        }
        .delete button{
            width: 40px;
            height: 49px;
            border-radius: 5px;
            border: 0;
            cursor: pointer;
        }
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
        }
        .modal-content {
            background-color: white;
            padding: 20px;
            margin: 15% auto;
            width: 50%;
            border-radius: 10px;
        }
        .close {
            float: right;
            cursor: pointer;
        }
        .sendData{
            width: 70px;
            height: 49px;
            border-radius: 5px;
            background-color: rgb(149, 236, 149);
            border: 0;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }
        .updateText{
            width: 436px;
            height: 49px;
        }
        #openModal{
            width: 40px;
            height: 49px;
            border-radius: 5px;
            border: 0;
            cursor: pointer;
        }
    </style>
</head>
<body>


    <main>
        <header>
            <div class="blog_info">
                <h3><%= blog_name %></h3>
            </div>
            <hr>
            <div class="messages">
                <ul>
                    <% data.forEach((obj,index) => { %>
                        <div class="libox">
                            <li><%= obj.content %></li>
                            <form action="/delete/<%= index %>" method="POST" style="display: inline;" class="delete">
                                <button type="submit">❌</button>
                            </form>
                            <button id="openModal">update</button>
                            <div id="myModal" class="modal">
                                <div class="modal-content">
                                    <span class="close">&times;</span>
                                    <form action="/update/<%= index %>" method="POST" class="update">
                                        <input type="text" placeholder="Enter text..." class="updateText" name="message">
                                        <button type="submit" class="sendData">Submit</button>
                                    </form> 
                                </div>
                            </div>              
                        </div>
                    <% }) %>
                </ul>
            </div>
            <form action="/message" method="POST" class="send">
                <input type="text" placeholder="message" name="message">
                <button type="submit">Send ✈️</button>
            </form>
        </header>
    </main>


    <script>
        const modal = document.querySelector(".modal");
        const btn = document.getElementById("openModal");
        const span = document.getElementsByClassName("close")[0];
        
        btn.onclick = function() {
            modal.style.display = "block";
        }
        
        span.onclick = function() {
            modal.style.display = "none";
        }
    </script>
    
</body>
</html>
